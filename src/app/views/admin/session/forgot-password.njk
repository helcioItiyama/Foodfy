{% extends "layout.njk" %}

    {% block head %}
        <title>Esqueceu a senha</title>
    {% endblock %}

{% block content %}

<section class="login forgot-password">
    <form method="post" action="/forgot-password">
        <div class="header">
            <h2>Esqueceu a senha?</h2>
        </div>
        
        <div class="fields_login">
            <h5>Email</h5>
            <div class="input">
                <input 
                type="email"
                name="email"
                placeholder="Digite o email cadastrado"
                value="{{user.email}}"
                onblur="Validade.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <button class="forgot_password_button" type="submit">Recuperar</button>
    </form>
</section>
    
{% endblock %}


