{% extends "layout.njk" %}

    {% block head %}
        <title>Editar {{item.title}}</title>
    {% endblock %}

{% block content %}
    <section class="title">
        <div class="page_title edit">
                <h2>Editando Receita</h2>
        </div>
        <div class="delete-form">
            {% if item.user_id == session.userId or session.admin == true %}
            <form id="delete" action="/recipes?_method=DELETE" method="POST" >
                <div class="edit_button button_delete">
                    <button type="submit">Deletar</button>
                </div>
                <input type="hidden" name="id" value="{{item.id}}">
            </form>
            {% endif %}
        
            <form action="/recipes?_method=PUT" method="POST" enctype="multipart/form-data">

            <div class="save_button">
                <button type="submit">Salvar Receita</button>
                <input type="hidden" name="userId" value="{{session.userId}}">
            </div>
        </div>
    </section>
            {% include "admin/recipes/fields.njk" %}
            <input type="hidden" name="id" value="{{item.id}}">
        </form>

{% endblock %}
