<section class="user-register">
    <div class="fields register">
        <div>
            <h5>Nome Completo</h5>
            <div class="input">
                <input 
                type="text"
                name="name"
                placeholder="Escreva o seu nome completo"
                value="{{user.name}}"
                required>
            </div>
        </div>

        <div>
            <h5>Email</h5>
            <div class="input">
                <input 
                type="email"
                name="email"
                placeholder="Escreva o seu email"
                value="{{user.email}}"
                onblur="Validade.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <div>
            <h5>Senha</h5>
            <div class="input">
                <input 
                type="password"
                name="password"
                {% if not user.id %}
                    placeholder="Escolha uma senha segura"
                {% else %}
                    placeholder="Digite sua senha para salvar"
                {% endif %}
                >
            </div>
        </div>

        {% if not user.id %}
            <div>
                <h5>Repetir senha</h5>
                <div class="input">
                    <input 
                    type="password"
                    name="passwordRepeat"
                    placeholder="Repita a senha escolhida">
                </div>
            </div>

            <input type="hidden" name="admin" value="true">
        {% endif %}
    </div>
</section>

