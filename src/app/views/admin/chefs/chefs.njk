{% extends "layout.njk" %}

    {% block head %}
        <title>Chefs</title>
    {% endblock %}

{% block content %}
    <section class="title">
        <div class="page_title">
            <h2>Gerenciar Chefs</h2>
        </div>
        
        <div class="menu-button">
            <form action="/chefs" method="GET">
                <input 
                    type="text"
                        name="filter"
                    value="{{filter}}"
                    placeholder="Filtrar por chef"
                >
                <button type="submit">Filtrar</button>
            </form>
            {% if session.admin == true %}
                <a class="button" href="/chefs/create">Adicionar Chef</a>
            {% endif %}
        </div>
    </section>

    <section class="menu-card">
        {% if filter %}
            <h2>Procurando por: {{filter}}</h2>
        {% endif %}
        
        <div class="food_box chef">
            {% for item in items %}
                <div class="recipes">
                    <div class="profiles">
                        <img class="image" src="{{item.src}}" alt="foto de {{item.name}}">
                        <div>
                            <h4 class ="title">{{item.name}}</h4>
                            <a href="/chefs/{{item.id}}">Visualizar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}           
        </div>
    </section>

    <section>
        <div class="pagination chef"
            data-page="{{pagination.page}}"
            data-total="{{pagination.total}}"
            data-filter="{{filter}}">
        </div>
    </section>
        
{% endblock %}