{% extends "layout.njk" %}

    {% block head %}
        <title>Usuários</title>
    {% endblock %}

{% block content %}
    <div class="page_title">
        <h2>Usuários</h2>
    </div>
    
    <div class="edit_button new_recipe">
        <form action="/admin/users" method="GET">
            <input 
                type="text"
                    name="filter"
                value="{{filter}}"
                placeholder="Filtrar por usário"
            >
            <button type="submit">Filtrar</button>
        </form>
        <a class="button" href="/admin/users/create">Novo</a>
    </div>

    <section>
        <div class="profiles_box">
            {% for user in users %}
                <div class="recipes">
                    <div class="profiles users">
                        <div class="users">
                            <h4 class ="title">{{user.name}}</h4>
                            <p>{{user.email}}</p>
                            <a href="/admin/users/{{user.id}}">Editar</a>
                            <a class="edit_a" href="/admin/users/{{user.id}}">Remover</a>
                        </div>
                    </div>
                </div>
            {% endfor %}           
        </div>
    </section>

     <div class="pagination chef"
        data-page="{{pagination.page}}"
        data-total="{{pagination.total}}"
        data-filter="{{filter}}">
    </div>
        
{% endblock %}